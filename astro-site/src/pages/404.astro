---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Page Not Found" description="The page you're looking for doesn't exist.">
  <div class="flex flex-col items-center justify-center py-20 text-center">
    <h1 class="text-6xl font-bold text-muted-foreground">404</h1>
    <h2 class="text-2xl font-semibold mt-4">Page Not Found</h2>
    <p class="text-muted-foreground mt-2">
      The page you're looking for doesn't exist or has been moved.
    </p>
    <a
      href="/"
      class="mt-8 px-6 py-3 bg-primary text-primary-foreground rounded-md hover:bg-primary/90 transition-colors"
    >
      Go back home
    </a>
  </div>
</BaseLayout>
